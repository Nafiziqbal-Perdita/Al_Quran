{
  "expo": {
    "name": "Al Quran",
    "slug": "QuranicApp",
    "version": "1.2.0",
    "orientation": "portrait",
    "icon": "./assets/images/logoicon.png",
    "scheme": "quranicapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
     
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logoicon.png",
        "backgroundColor": "#004E55"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.nafiziqbal.QuranicApp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/logoicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logoicon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#004E55"
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-2099807078746982~4780546161"
             
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "add54d5b-c1d2-48eb-b824-60410de7335a"
      }
    }
  }
}
